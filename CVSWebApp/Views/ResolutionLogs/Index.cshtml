@model IEnumerable<CVSWebApp.Models.ResolutionLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResolutionDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SurveyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OutletId)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResolutionDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutletId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResolutionLogId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResolutionLogId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResolutionLogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
